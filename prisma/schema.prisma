generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model School {
  id            String         @id @default(uuid())
  name          String
  joinCode      String         @unique @map("join_code")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  users         User[]
  students      Student[]
  teachers      Teacher[]
  classrooms    Classroom[]
  announcements Announcement[]
  notifications Notification[]
  attendance    Attendance[]
  fees          Fee[]
  dailyUpdates  DailyUpdate[]

  @@map("schools")
}

model Classroom {
  id        String    @id @default(uuid())
  name      String
  schoolId  String    @map("school_id")
  createdAt DateTime  @default(now()) @map("created_at")
  school    School    @relation(fields: [schoolId], references: [id])
  students  Student[]

  @@map("classrooms")
}

model Student {
  id         String        @id @default(uuid())
  name       String
  age        String
  parentName String        @map("parent_name")
  createdAt  DateTime      @default(now()) @map("created_at")
  updatedAt  DateTime      @updatedAt @map("updated_at")
  parentId   String?       @map("parent_id")
  schoolId   String        @map("school_id")
  classId    String?       @map("class_id")
  attendance Attendance[]
  updates    DailyUpdate[]
  fees       Fee[]
  parent     User?         @relation(fields: [parentId], references: [id])
  school     School        @relation(fields: [schoolId], references: [id])
  classroom  Classroom?    @relation(fields: [classId], references: [id])

  @@map("students")
}

model Teacher {
  id        String   @id @default(uuid())
  name      String
  subject   String
  classes   String[] // Keeping this for backward compatibility or multiple classes
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  userId    String?  @unique @map("user_id")
  schoolId  String   @map("school_id")
  user      User?    @relation(fields: [userId], references: [id])
  school    School   @relation(fields: [schoolId], references: [id])

  @@map("teachers")
}

model Attendance {
  id        String   @id @default(uuid())
  studentId String   @map("student_id")
  schoolId  String   @map("school_id")
  date      DateTime @default(now())
  status    String
  student   Student  @relation(fields: [studentId], references: [id])
  school    School   @relation(fields: [schoolId], references: [id])

  @@map("attendance")
}

model Fee {
  id        String   @id @default(uuid())
  studentId String   @map("student_id")
  schoolId  String   @map("school_id")
  amount    Float
  status    String
  month     String
  createdAt DateTime @default(now()) @map("created_at")
  student   Student  @relation(fields: [studentId], references: [id])
  school    School   @relation(fields: [schoolId], references: [id])

  @@map("fees")
}

model DailyUpdate {
  id        String   @id @default(uuid())
  studentId String?  @map("student_id")
  schoolId  String   @map("school_id")
  title     String
  content   String
  type      String
  date      DateTime @default(now())
  student   Student? @relation(fields: [studentId], references: [id])
  school    School   @relation(fields: [schoolId], references: [id])

  @@map("daily_updates")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  password  String
  role      String
  schoolId  String?   @map("school_id")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  students  Student[]
  teacher   Teacher?
  school    School?   @relation(fields: [schoolId], references: [id])

  @@map("users")
}

model Notification {
  id       String   @id @default(uuid())
  schoolId String   @map("school_id")
  title    String
  content  String
  type     String
  read     Boolean  @default(false)
  date     DateTime @default(now())
  school   School   @relation(fields: [schoolId], references: [id])

  @@map("notifications")
}

model Announcement {
  id       String   @id @default(uuid())
  schoolId String   @map("school_id")
  title    String
  content  String
  date     DateTime @default(now())
  school   School   @relation(fields: [schoolId], references: [id])

  @@map("announcements")
}
